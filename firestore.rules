rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role_type == 'admin';
    }

    function isHost() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.host_approved == true;
    }

    // ========== USERS COLLECTION ==========

    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();

      // Users can create their own profile
      allow create: if isOwner(userId);

      // Users can update their own profile, admins can update any
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // ========== CITIES COLLECTION ==========

    match /cities/{cityId} {
      // Anyone can read cities (public data)
      allow read: if true;

      // Only admins can write cities
      allow write: if isAdmin();
    }

    // ========== OFFICES COLLECTION ==========

    match /offices/{officeId} {
      // Anyone authenticated can read offices (needed for host assignment)
      allow read: if isAuthenticated();

      // Only admins can create/update/delete offices
      allow write: if isAdmin();
    }

    // ========== ADVENTURES COLLECTION ==========

    match /adventures/{adventureId} {
      // Anyone can read active adventures
      allow read: if true;

      // Approved hosts can create adventures
      allow create: if isHost() &&
                      request.resource.data.host_id == request.auth.uid;

      // Adventure owner or admin can update
      allow update: if isAuthenticated() &&
                      (resource.data.host_id == request.auth.uid || isAdmin());

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ========== SERVICES COLLECTION ==========

    match /services/{serviceId} {
      // Anyone can read services
      allow read: if true;

      // Only admins can write services
      allow write: if isAdmin();
    }

    // ========== BOOKINGS COLLECTION ==========

    match /bookings/{bookingId} {
      // Users can read their own bookings (as guest or host)
      // Approved hosts can read pending bookings to send offers
      allow read: if isAuthenticated() &&
                    (resource.data.user_id == request.auth.uid ||
                     resource.data.host_id == request.auth.uid ||
                     (isHost() && resource.data.status == 'pending') ||
                     isAdmin());

      // Authenticated users can create bookings for themselves
      allow create: if isAuthenticated() &&
                      request.resource.data.user_id == request.auth.uid;

      // Guest, host, or admin can update bookings
      allow update: if isAuthenticated() &&
                      (resource.data.user_id == request.auth.uid ||
                       resource.data.host_id == request.auth.uid ||
                       isAdmin());

      // Only admins can delete bookings
      allow delete: if isAdmin();
    }

    // ========== CHATS COLLECTION ==========

    match /chats/{chatId} {
      // Only participants can read chats
      allow read: if isAuthenticated() &&
                    request.auth.uid in resource.data.participants;

      // Authenticated users can create chats they're part of
      allow create: if isAuthenticated() &&
                      request.auth.uid in request.resource.data.participants;

      // Participants can update chats
      allow update: if isAuthenticated() &&
                      request.auth.uid in resource.data.participants;

      // Only admins can delete chats
      allow delete: if isAdmin();

      // ========== MESSAGES SUBCOLLECTION ==========

      match /messages/{messageId} {
        // Participants can read messages
        allow read: if isAuthenticated() &&
                      request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Participants can create messages
        allow create: if isAuthenticated() &&
                        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
                        request.resource.data.sender_id == request.auth.uid;

        // Message sender can update (mark as read, edit)
        allow update: if isAuthenticated() &&
                        (resource.data.sender_id == request.auth.uid ||
                         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);

        // Only admins can delete messages
        allow delete: if isAdmin();
      }
    }

    // ========== CONVERSATIONS COLLECTION ==========

    match /conversations/{conversationId} {
      // Travelers can read their own conversations, hosts can read conversations they're part of
      allow read: if isAuthenticated() &&
                    (resource.data.traveler_email == request.auth.token.email ||
                     request.auth.token.email in resource.data.host_emails ||
                     isAdmin());

      // Authenticated users can create conversations they're part of
      allow create: if isAuthenticated() &&
                      (request.resource.data.traveler_email == request.auth.token.email ||
                       request.auth.token.email in request.resource.data.host_emails);

      // Participants can update conversations (last message, unread status)
      allow update: if isAuthenticated() &&
                      (resource.data.traveler_email == request.auth.token.email ||
                       request.auth.token.email in resource.data.host_emails);

      // Only admins can delete conversations
      allow delete: if isAdmin();

      // ========== MESSAGES SUBCOLLECTION ==========

      match /messages/{messageId} {
        // Participants can read messages
        allow read: if isAuthenticated() &&
                      (get(/databases/$(database)/documents/conversations/$(conversationId)).data.traveler_email == request.auth.token.email ||
                       request.auth.token.email in get(/databases/$(database)/documents/conversations/$(conversationId)).data.host_emails);

        // Participants can create messages
        allow create: if isAuthenticated() &&
                        (get(/databases/$(database)/documents/conversations/$(conversationId)).data.traveler_email == request.auth.token.email ||
                         request.auth.token.email in get(/databases/$(database)/documents/conversations/$(conversationId)).data.host_emails) &&
                        request.resource.data.sender_email == request.auth.token.email;

        // Participants can update messages (mark as read)
        allow update: if isAuthenticated() &&
                        (get(/databases/$(database)/documents/conversations/$(conversationId)).data.traveler_email == request.auth.token.email ||
                         request.auth.token.email in get(/databases/$(database)/documents/conversations/$(conversationId)).data.host_emails);

        // Only admins can delete messages
        allow delete: if isAdmin();
      }
    }

    // ========== REVIEWS COLLECTION ==========

    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;

      // Authenticated users can create reviews for themselves
      allow create: if isAuthenticated() &&
                      request.resource.data.reviewer_id == request.auth.uid;

      // Reviewer or admin can update
      allow update: if isAuthenticated() &&
                      (resource.data.reviewer_id == request.auth.uid || isAdmin());

      // Only admins can delete reviews
      allow delete: if isAdmin();
    }

    // ========== OFFERS COLLECTION ==========

    match /offers/{offerId} {
      // Hosts can read their own offers, travelers can read offers for their bookings
      allow read: if isAuthenticated() &&
                    (resource.data.host_email == request.auth.token.email ||
                     resource.data.traveler_email == request.auth.token.email ||
                     isAdmin());

      // Approved hosts can create offers
      allow create: if isHost() &&
                      request.resource.data.host_email == request.auth.token.email;

      // Host can update their offers, traveler can accept/decline offers
      allow update: if isAuthenticated() &&
                      (resource.data.host_email == request.auth.token.email ||
                       resource.data.traveler_email == request.auth.token.email ||
                       isAdmin());

      // Only admins can delete offers
      allow delete: if isAdmin();
    }

    // ========== MESSAGES COLLECTION (Top-level) ==========

    match /messages/{messageId} {
      // Users can read messages from conversations they're part of
      allow read: if isAuthenticated();

      // Authenticated users can create messages
      allow create: if isAuthenticated() &&
                      request.resource.data.sender_email == request.auth.token.email;

      // Sender can update their messages (edit, mark as delivered)
      // Recipients can also update to mark messages as read (add to read_by array)
      allow update: if isAuthenticated() &&
                      (resource.data.sender_email == request.auth.token.email ||
                       request.auth.token.email in request.resource.data.read_by);

      // Only admins can delete messages
      allow delete: if isAdmin();
    }

    // ========== NOTIFICATIONS COLLECTION ==========

    match /notifications/{notificationId} {
      // Users can read their own notifications, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.user_id == request.auth.uid ||
                     resource.data.recipient_email == request.auth.token.email ||
                     isAdmin());

      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() &&
                      (resource.data.user_id == request.auth.uid ||
                       resource.data.recipient_email == request.auth.token.email);

      // Authenticated users can create notifications (for booking requests, etc)
      allow create: if isAuthenticated();

      // Only admins can delete notifications
      allow delete: if isAdmin();
    }

    // ========== PAYMENTS COLLECTION ==========

    match /payments/{paymentId} {
      // Users can read their own payments (as buyer or host)
      allow read: if isAuthenticated() &&
                    (resource.data.user_id == request.auth.uid ||
                     resource.data.host_id == request.auth.uid ||
                     isAdmin());

      // Only admin/system can write payments
      allow write: if isAdmin();
    }

    // ========== FAVORITES COLLECTION ==========

    match /favorites/{favoriteId} {
      // Users can only read their own favorites
      allow read: if isOwner(resource.data.user_id);

      // Users can create their own favorites
      allow create: if isAuthenticated() &&
                      request.resource.data.user_id == request.auth.uid;

      // Users can delete their own favorites
      allow delete: if isOwner(resource.data.user_id);
    }

    // ========== DEVICE TOKENS COLLECTION (FCM Push Notifications) ==========

    match /device_tokens/{tokenId} {
      // Users can read their own device tokens, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.user_id == request.auth.uid ||
                     resource.data.user_email == request.auth.token.email ||
                     isAdmin());

      // Authenticated users can create/update their device tokens
      allow create, update: if isAuthenticated() &&
                              (request.resource.data.user_id == request.auth.uid ||
                               request.resource.data.user_email == request.auth.token.email);

      // Users can delete their own tokens, admins can delete any
      allow delete: if isAuthenticated() &&
                      (resource.data.user_id == request.auth.uid ||
                       resource.data.user_email == request.auth.token.email ||
                       isAdmin());
    }

    // ========== HERO SLIDES COLLECTION ==========

    match /hero_slides/{slideId} {
      // Anyone can read hero slides (public)
      allow read: if true;

      // Only admins can create/update/delete hero slides
      allow write: if isAdmin();
    }
  }
}