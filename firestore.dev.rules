rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //  DEVELOPMENT RULES - ALLOW ALL AUTHENTICATED USERS
    // TODO: Switch to firestore.rules before production!

    // Allow all reads for everyone
    match /{document=**} {
      allow read: if true;
    }

    // Allow writes for authenticated users
    match /cities/{cityId} {
      allow write: if request.auth != null;
    }

    match /adventures/{adventureId} {
      allow write: if request.auth != null;
    }

    match /services/{serviceId} {
      allow write: if request.auth != null;
    }

    match /bookings/{bookingId} {
      allow write: if request.auth != null;
    }

    match /offers/{offerId} {
      allow read, write: if request.auth != null;
    }

    match /notifications/{notificationId} {
      // Allow authenticated users to create notifications
      allow create: if request.auth != null;
      // Users can read their own notifications
      allow read: if request.auth != null &&
                    (resource.data.user_id == request.auth.uid ||
                     resource.data.recipient_email == request.auth.token.email);
      // Users can update their own notifications
      allow update: if request.auth != null &&
                      (resource.data.user_id == request.auth.uid ||
                       resource.data.recipient_email == request.auth.token.email);
      // Allow delete for now
      allow delete: if request.auth != null;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /chats/{chatId} {
      allow read, write: if request.auth != null;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null;
    }

    match /device_tokens/{tokenId} {
      allow read, write: if request.auth != null;
    }

    match /notification_preferences/{prefId} {
      allow read, write: if request.auth != null;
    }
  }
}
